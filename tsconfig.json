{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "lib/",
    "declaration": true,
    "experimentalDecorators": true,
    "strict": true,
    "lib": [
      "es2015", "es2018.promise"
    ]
  },
  "include": [
    "./src//**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
